---
interface Props {
  title: string;
  slug: string;
  date: Date;
  tags?: string[];
  description?: string;
  type?: 'blog' | 'til';
}

const { title, slug, date, tags = [], description, type = 'blog' } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
});

const basePath = type === 'til' ? '/til' : '/writing';
---

<article class="post-card">
  <a href={`${basePath}/${slug}`} class="post-card__link">
    <div class="post-card__header">
      <time class="post-card__date" datetime={date.toISOString()}>
        {formattedDate}
      </time>
      {tags.length > 0 && (
        <div class="post-card__tags">
          {tags.slice(0, 2).map(tag => (
            <span class="post-card__tag">{tag}</span>
          ))}
        </div>
      )}
    </div>

    <h3 class="post-card__title">{title}</h3>

    {description && (
      <p class="post-card__description">{description}</p>
    )}

    <span class="post-card__read-more">
      Read more
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="5" y1="12" x2="19" y2="12"/>
        <polyline points="12 5 19 12 12 19"/>
      </svg>
    </span>
  </a>
</article>

<style>
  .post-card {
    padding: var(--space-lg);
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
  }

  .post-card:hover {
    border-color: var(--color-border-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .post-card__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .post-card__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-sm);
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .post-card__date {
    font-size: var(--text-xs);
    color: var(--color-text-tertiary);
    font-family: var(--font-mono);
  }

  .post-card__tags {
    display: flex;
    gap: var(--space-xs);
  }

  .post-card__tag {
    font-size: var(--text-xs);
    color: var(--color-accent);
    background-color: var(--color-accent-muted);
    padding: 2px 8px;
    border-radius: var(--radius-full);
  }

  .post-card__title {
    font-size: var(--text-xl);
    color: var(--color-text-primary);
    margin-bottom: var(--space-sm);
    transition: color var(--transition-fast);
  }

  .post-card:hover .post-card__title {
    color: var(--color-accent);
  }

  .post-card__description {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-md);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-card__read-more {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-accent);
    transition: gap var(--transition-fast);
  }

  .post-card:hover .post-card__read-more {
    gap: var(--space-sm);
  }
</style>
