---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { fetchTweets } from '../../lib/tweets';

const tweets = fetchTweets();
const sortedTweets = tweets.sort((a, b) => b.date.valueOf() - a.date.valueOf());

// Auto-links URLs, @mentions, and #hashtags in tweet text.
function linkifyTweet(text: string): string {
  return text
    .replace(/&/g, '&amp;')
    .replace(/</g, '&lt;')
    .replace(/>/g, '&gt;')
    .replace(
      /(https?:\/\/[^\s]+)/g,
      '<a href="$1" target="_blank" rel="noopener noreferrer" class="tweet__link">$1</a>'
    )
    .replace(
      /@(\w+)/g,
      '<a href="https://x.com/$1" target="_blank" rel="noopener noreferrer" class="tweet__mention">@$1</a>'
    )
    .replace(
      /#(\w+)/g,
      '<a href="https://x.com/hashtag/$1" target="_blank" rel="noopener noreferrer" class="tweet__hashtag">#$1</a>'
    );
}

/**
 * Returns the CSS class for the media grid based on the number of items.
 */
function mediaGridClass(count: number): string {
  if (count === 1) return 'tweet__media tweet__media--single';
  if (count === 2) return 'tweet__media tweet__media--duo';
  return 'tweet__media tweet__media--grid';
}
---

<BaseLayout
  title="Thoughts"
  description="Thoughts, ideas, and musings from @adlrocha on Twitter/X."
>
  <Header />

  <main class="page">
    <div class="container container--narrow">
      <header class="page__header animate-fade-in">
        <h1 class="page__title">Thoughts</h1>
        <p class="page__description">
          Thoughts, ideas, and musings shared on
          <a href="https://x.com/adlrocha" target="_blank" rel="noopener noreferrer" class="x-link">@adlrocha</a>.
          My Twitter diary.
        </p>
      </header>

      {sortedTweets.length === 0 ? (
        <p class="empty-state">No thoughts yet. Run <code>npm run update</code> to pull them in.</p>
      ) : (
        <div class="tweets-list">
          {sortedTweets.map(tweet => (
            <article class="tweet">
              <div class="tweet__body" set:html={linkifyTweet(tweet.text)} />

              {/* Tweet media (images, gifs, videos) */}
              {tweet.media && tweet.media.length > 0 && (
                <div class={mediaGridClass(tweet.media.length)}>
                  {tweet.media.map(m => (
                    m.type === 'photo' ? (
                      <a href={m.url} target="_blank" rel="noopener noreferrer" class="tweet__media-link">
                        <img
                          src={m.url}
                          alt="Tweet image"
                          loading="lazy"
                          class="tweet__media-img"
                        />
                      </a>
                    ) : m.type === 'gif' ? (
                      <video
                        src={m.url}
                        poster={m.poster}
                        autoplay
                        loop
                        muted
                        playsinline
                        class="tweet__media-video"
                      />
                    ) : (
                      <video
                        src={m.url}
                        poster={m.poster}
                        controls
                        playsinline
                        preload="metadata"
                        class="tweet__media-video"
                      />
                    )
                  ))}
                </div>
              )}

              {/* Quoted tweet */}
              {tweet.quotedTweet && (
                <blockquote class="tweet__quote">
                  {tweet.quotedTweet.author && (
                    <span class="tweet__quote-author">
                      {tweet.quotedTweet.author}
                    </span>
                  )}
                  <div
                    class="tweet__quote-text"
                    set:html={linkifyTweet(tweet.quotedTweet.text)}
                  />
                  {/* Quoted tweet media */}
                  {tweet.quotedTweet.media && tweet.quotedTweet.media.length > 0 && (
                    <div class={mediaGridClass(tweet.quotedTweet.media.length)}>
                      {tweet.quotedTweet.media.map(m => (
                        m.type === 'photo' ? (
                          <a href={m.url} target="_blank" rel="noopener noreferrer" class="tweet__media-link">
                            <img
                              src={m.url}
                              alt="Quoted tweet image"
                              loading="lazy"
                              class="tweet__media-img"
                            />
                          </a>
                        ) : m.type === 'gif' ? (
                          <video
                            src={m.url}
                            poster={m.poster}
                            autoplay
                            loop
                            muted
                            playsinline
                            class="tweet__media-video"
                          />
                        ) : (
                          <video
                            src={m.url}
                            poster={m.poster}
                            controls
                            playsinline
                            preload="metadata"
                            class="tweet__media-video"
                          />
                        )
                      ))}
                    </div>
                  )}
                </blockquote>
              )}

              <footer class="tweet__footer">
                <time class="tweet__date" datetime={tweet.date.toISOString()}>
                  {tweet.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
                </time>
                <a href={tweet.url} target="_blank" rel="noopener noreferrer" class="tweet__original">
                  View on X
                  <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                    <polyline points="15 3 21 3 21 9"/>
                    <line x1="10" y1="14" x2="21" y2="3"/>
                  </svg>
                </a>
              </footer>
            </article>
          ))}
        </div>
      )}
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  .page {
    padding: var(--space-2xl) 0;
  }

  .page__header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }

  .page__title {
    font-size: var(--text-5xl);
    margin-bottom: var(--space-md);
  }

  .page__description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
    line-height: var(--leading-relaxed);
  }

  .x-link {
    color: var(--color-accent);
  }

  .empty-state {
    text-align: center;
    color: var(--color-text-tertiary);
    font-size: var(--text-lg);
    padding: var(--space-3xl) 0;
  }

  .empty-state code {
    font-family: var(--font-mono);
    background: var(--color-bg-secondary);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
  }

  .tweets-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .tweet {
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    transition: border-color var(--transition-fast);
  }

  .tweet:hover {
    border-color: var(--color-text-tertiary);
  }

  .tweet__body {
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    color: var(--color-text-primary);
    white-space: pre-wrap;
    word-break: break-word;
  }

  /* ---- Media grid ---- */

  .tweet__media {
    margin-top: var(--space-sm);
    display: grid;
    gap: 4px;
    border-radius: var(--radius-md);
    overflow: hidden;
  }

  .tweet__media--single {
    grid-template-columns: 1fr;
  }

  .tweet__media--duo {
    grid-template-columns: 1fr 1fr;
  }

  .tweet__media--grid {
    grid-template-columns: 1fr 1fr;
    grid-auto-rows: minmax(0, 200px);
  }

  /* ---- Quoted tweet ---- */

  .tweet__quote {
    margin: var(--space-sm) 0 0 0;
    padding: var(--space-sm) var(--space-md);
    border-left: 3px solid var(--color-accent);
    background: var(--color-bg-tertiary);
    border-radius: 0 var(--radius-md) var(--radius-md) 0;
  }

  .tweet__quote-author {
    display: block;
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xs);
  }

  .tweet__quote-text {
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    white-space: pre-wrap;
    word-break: break-word;
  }

  .tweet__footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: var(--space-md);
    padding-top: var(--space-sm);
    border-top: 1px solid var(--color-border);
  }

  .tweet__date {
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
    font-family: var(--font-mono);
  }

  .tweet__original {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .tweet__original:hover {
    color: var(--color-accent);
  }
</style>

<style is:global>
  .tweet__link {
    color: var(--color-accent);
    text-decoration: none;
    word-break: break-all;
  }

  .tweet__link:hover {
    text-decoration: underline;
  }

  .tweet__mention {
    color: var(--color-accent);
    text-decoration: none;
  }

  .tweet__mention:hover {
    text-decoration: underline;
  }

  .tweet__hashtag {
    color: var(--color-accent);
    text-decoration: none;
  }

  .tweet__hashtag:hover {
    text-decoration: underline;
  }

  .tweet__media-link {
    display: block;
    line-height: 0;
  }

  .tweet__media-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .tweet__media-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: var(--radius-md);
  }

  .tweet__media--single .tweet__media-img,
  .tweet__media--single .tweet__media-video {
    max-height: 500px;
    object-fit: contain;
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-md);
  }
</style>
