---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import PostCard from '../../components/PostCard.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Group posts by year
const postsByYear = sortedPosts.reduce((acc, post) => {
  const year = post.data.date.getFullYear();
  if (!acc[year]) acc[year] = [];
  acc[year].push(post);
  return acc;
}, {} as Record<number, typeof posts>);

const years = Object.keys(postsByYear).map(Number).sort((a, b) => b - a);
---

<BaseLayout
  title="Writing"
  description="Technical articles on distributed systems, blockchain, AI, and software engineering."
>
  <Header />

  <main class="page">
    <div class="container container--narrow">
      <header class="page__header animate-fade-in">
        <h1 class="page__title">Writing</h1>
        <p class="page__description">
          Technical articles on distributed systems, blockchain, AI, and software engineering.
          Thoughts and explorations from my journey building complex systems.
        </p>
      </header>

      <div class="posts">
        {years.map(year => (
          <section class="year-section">
            <h2 class="year-title">{year}</h2>
            <div class="posts-grid">
              {postsByYear[year].map(post => (
                <PostCard
                  title={post.data.title}
                  slug={post.id}
                  date={post.data.date}
                  tags={post.data.tags}
                  type="blog"
                />
              ))}
            </div>
          </section>
        ))}
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  .page {
    padding: var(--space-2xl) 0;
  }

  .page__header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }

  .page__title {
    font-size: var(--text-5xl);
    margin-bottom: var(--space-md);
  }

  .page__description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
    line-height: var(--leading-relaxed);
  }

  .year-section {
    margin-bottom: var(--space-3xl);
  }

  .year-section:last-child {
    margin-bottom: 0;
  }

  .year-title {
    font-size: var(--text-xl);
    color: var(--color-text-tertiary);
    margin-bottom: var(--space-lg);
    font-family: var(--font-mono);
    font-weight: 400;
  }

  .posts-grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }
</style>
