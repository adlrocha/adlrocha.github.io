---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import ProjectCard from '../components/ProjectCard.astro';
import PostListItem from '../components/PostListItem.astro';
import { getCollection } from 'astro:content';
import { fetchSubstackPosts } from '../lib/substack';

import projects from '../data/projects.json';

// Fetch local blog posts
const blogPosts = await getCollection('blog', ({ data }) => !data.draft);

// Fetch Substack posts
const substackPosts = await fetchSubstackPosts();

// Unified post type
type UnifiedPost = {
  title: string;
  date: Date;
  slug?: string;
  link?: string;
  tags?: string[];
  isExternal: boolean;
};

// Merge and sort all posts
const allPosts: UnifiedPost[] = [
  ...blogPosts.map(post => ({
    title: post.data.title,
    date: post.data.date,
    slug: post.id,
    tags: post.data.tags,
    isExternal: false,
  })),
  ...substackPosts.map(post => ({
    title: post.title,
    date: post.date,
    link: post.link,
    isExternal: true,
  })),
];

const recentPosts = allPosts
  .sort((a, b) => b.date.valueOf() - a.date.valueOf())
  .slice(0, 5);

const featuredProjects = projects.filter(p => p.featured);
---

<BaseLayout title="Home">
  <Header />

  <main>
    <Hero />

    <!-- Featured Projects Section -->
    <section class="section">
      <div class="container">
        <div class="section__header">
          <h2 class="section__title">Featured Projects</h2>
          <a href="/projects" class="section__link">
            View all projects
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"/>
              <polyline points="12 5 19 12 12 19"/>
            </svg>
          </a>
        </div>

        <div class="projects-grid">
          {featuredProjects.map(project => (
            <ProjectCard
              name={project.name}
              description={project.description}
              url={project.url}
              tags={project.tags}
              year={project.year}
              featured={project.featured}
            />
          ))}
        </div>
      </div>
    </section>

    <!-- Recent Writing Section -->
    <section class="section">
      <div class="container">
        <div class="section__header">
          <h2 class="section__title">Recent Writing</h2>
          <a href="/writing" class="section__link">
            View all posts
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"/>
              <polyline points="12 5 19 12 12 19"/>
            </svg>
          </a>
        </div>

        <div class="posts-list">
          {recentPosts.map(post => (
            post.isExternal ? (
              <article class="post-item post-item--external">
                <a href={post.link} class="post-item__link" target="_blank" rel="noopener noreferrer">
                  <div class="post-item__content">
                    <h3 class="post-item__title">
                      {post.title}
                      <svg class="post-item__icon" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                        <polyline points="15 3 21 3 21 9"/>
                        <line x1="10" y1="14" x2="21" y2="3"/>
                      </svg>
                    </h3>
                    <span class="post-item__badge">Substack</span>
                  </div>
                  <time class="post-item__date" datetime={post.date.toISOString()}>
                    {post.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
                  </time>
                </a>
              </article>
            ) : (
              <PostListItem
                title={post.title}
                slug={post.slug!}
                date={post.date}
                tags={post.tags}
                type="blog"
              />
            )
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .section {
    padding: var(--space-3xl) 0;
  }

  .section__header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: var(--space-xl);
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  .section__title {
    font-size: var(--text-2xl);
  }

  .section__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-accent);
    transition: gap var(--transition-fast);
  }

  .section__link:hover {
    gap: var(--space-sm);
    color: var(--color-accent-hover);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-lg);
  }

  .posts-list {
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-sm) var(--space-lg);
  }

  /* External post item styles */
  .post-item--external {
    border-bottom: 1px solid var(--color-border);
  }

  .post-item--external:last-child {
    border-bottom: none;
  }

  .post-item--external .post-item__link {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--space-md);
    padding: var(--space-md) 0;
    text-decoration: none;
    color: inherit;
    transition: all var(--transition-fast);
  }

  .post-item--external .post-item__link:hover {
    padding-left: var(--space-sm);
  }

  .post-item--external .post-item__content {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    flex: 1;
    min-width: 0;
  }

  .post-item--external .post-item__title {
    font-size: var(--text-base);
    font-family: var(--font-sans);
    font-weight: 500;
    color: var(--color-text-primary);
    transition: color var(--transition-fast);
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .post-item--external .post-item__link:hover .post-item__title {
    color: var(--color-accent);
  }

  .post-item--external .post-item__icon {
    opacity: 0.5;
    flex-shrink: 0;
  }

  .post-item--external .post-item__badge {
    font-size: var(--text-xs);
    color: #ff6719;
    font-family: var(--font-mono);
  }

  .post-item--external .post-item__date {
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
    font-family: var(--font-mono);
    flex-shrink: 0;
  }

  @media (max-width: 640px) {
    .post-item--external .post-item__link {
      flex-direction: column;
      gap: var(--space-xs);
    }
  }
</style>
